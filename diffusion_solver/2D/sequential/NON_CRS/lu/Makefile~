LIB_LIST = -llapack -lblas
F95 = gfortran
OPT = -Wall -fimplicit-none

all: testlu

lu1.o: lu1.f90
	$(F95) $(OPT) -c lu1.f90

bs1.o: bs1.f90
	$(F95) $(OPT) -c bs1.f90

testlu.o: testlu.f90 
	$(F95)  $(OPT) -c testlu.f90   

testlu: testlu.o lu1.o bs1.o
	$(F95) $(OPT) -o testlu testlu.o  lu1.o  bs1.o $(LIB_LIST)

clean: 
	rm -rf *.o  core* 



